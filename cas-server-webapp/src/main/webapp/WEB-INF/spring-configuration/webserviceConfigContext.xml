<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- CAS Webservice Authentication Adapter configuration-->

  <!-- **************************************-->
  <!-- Webservice Client -->
  <!-- **************************************-->
  <bean id="authWebserviceClient" class="org.roos.cas.ws.sample.client.ExampleWsClient">
    <property name="marshaller" ref="webserviceMarshaller"/>
    <property name="unmarshaller" ref="webserviceMarshaller"/>
    <property name="defaultUri" value="https://localhost:8443/cas/auth/authentication.wsdl"/>
    <property name="securityConfigResource" ref="webserviceConfigResource"/>
  </bean>

  <!-- (Un-)Marshaller -->
  <bean id="webserviceMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
    <property name="contextPath" value="org.roos.cas.ws.samples.auth.schema"/>
  </bean>

  <bean id="webserviceConfigResource" class="org.springframework.web.context.support.ServletContextResource">
    <constructor-arg>
      <bean class="org.springframework.web.context.support.ServletContextFactoryBean"/>
    </constructor-arg>
    <constructor-arg value="/WEB-INF/webservice-configuration/webserviceSecurityPolicy.xml"/>
  </bean>
</beans>